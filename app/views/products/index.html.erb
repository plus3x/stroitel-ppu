<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Picture url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.picture_url %></td>
        <% if current_user %>
          <% if current_user.manager? or current_user.admin? %>
            <td><%= link_to 'Show', [@service, @type_of_product, product] %></td>
            <td><%= link_to 'Edit', edit_service_type_of_product_product_path(@service, @type_of_product, product) %></td>
            <td><%= link_to 'Destroy', [@service, @type_of_product, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user %>
  <% if current_user.manager? or current_user.admin? %>
    <%= link_to 'New Product', new_service_type_of_product_product_path %>
  <% end %>
<% end %>