<h1>Listing services</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Description</th>
      <th>Picture url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.title %></td>
        <td><%= service.description %></td>
        <td><%= service.picture_url %></td>
        <% if current_user %>
          <% if current_user.manager? or current_user.admin? %>
            <td><%= link_to 'Show', service %></td>
            <td><%= link_to 'Edit', edit_service_path(service) %></td>
            <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<% if current_user %>
  <% if current_user.manager? or current_user.admin? %>
    <%= link_to 'New Service', new_service_path %>
  <% end %>
<% end %>
