<div id="login_form">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend><%= t '.please_log_in' %></legend>
      <div>
        <%= label_tag :name %><br/>
        <%= email_field_tag :name, params[:name] %>
      </div> 
      <div>
        <%= label_tag :password %><br/>
        <%= password_field_tag :password, params[:password] %>
      </div>
      <div>
        <%= submit_tag 'login' %> 
      </div>
    </fieldset> 
  <% end %>
</div>
